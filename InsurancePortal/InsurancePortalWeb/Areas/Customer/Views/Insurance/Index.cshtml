@model List<Insurance>

<div class="container">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="mb-4">Insurances</h2>
        </div>
    </div>
    <div class="row">
        @foreach (var obj in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@obj.ImageUrl" class="card-img-top" alt="@obj.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@obj.Name</h5>
                        <p class="card-text text-muted">@obj.Description</p>
                        <p class="card-text fw-bold">$@obj.Price</p>
                        <button class="btn btn-primary w-100" onclick="location.href='/Purchase?insuranceId=@obj.Id'">Purchase</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
